extends  ./layout.jade

block vars
    - var title = "Login Page"

block content
    .login-box
        .login-box-body
            p.login-box-msg
                | Sign in to start your session
            if message.length
                .alert.alert-danger= message
            form(action="/login" method="post")
                .form-group.has-feedback
                    input(name="email" type="email" class="form-control" placeholder="Email" value="demo@directetf.com")
                    span.glyphicon.glyphicon-envelope.form-control-feedback
                .form-group.has-feedback
                    input(name="password" type="password" class="form-control" placeholder="Password" value="demo")
                    span.glyphicon.glyphicon-envelope.form-control-feedback
                .row
                    .col-xs-8
                        .checkbox.icheck
                            label
                                input(type="checkbox")
                                | Remember Me
                    .col-xs-4
                        button(type="submit").btn.btn-primary.btn-block.btn-flat
                            | Sign In
            a(href="/forget")| I forgot my password
            a(href="/signup" class="text-center")| Register a new membership

block scripts
    script(src="/AdminLTE//plugins/iCheck/icheck.min.js")
    script.
        $(function () {
            $('input').iCheck({
                checkboxClass: 'icheckbox_square-blue',
                radioClass: 'iradio_square-blue',
                increaseArea: '20%' // optional
            });
        });